{
    "manifest_version": 2,
    "name": "Messenger Dark Theme",
    "version": "0.3.9",
    "description": "Change your messenger theme from boring ugly-looking white color to whatever colors you like.",
    "author": "Jakub Kurdziel",
    "content_scripts": [
        {
            "matches": [
                "https://www.messenger.com/t/*",
                "http://www.messenger.com/t/*"
            ],
            "js": ["app.js"]
        }
    ],
    "permissions" : ["tabs", "activeTab", "storage"],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://googleapis.com; object-src 'self'",
    "browser_action": {
        "default_title": "Custom your Messenger colors",
        "default_popup": "./popup/popup.html"
    }
}